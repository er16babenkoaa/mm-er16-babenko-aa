clear all;
close all;
clc;

Fd = 40e3;
Td = 1/Fd;
Tmod = 0.3;%0.01;
t = 0:Td:Tmod;

df = 100;
S = cos(2*pi*(500+df*rand(1,1)) * t);
S = fft(S);
W = S * window(@blackmanharris, length(S));

figure(1);
%f = 0:Fd:1/Tmod;
%axis(0 10e4);
f = 0:(length(t)-1);
%plot(f/Td, 10*log(abs(S)), f/Td, 10*log(abs(W)));

%loglog(t/Td, abs(S));